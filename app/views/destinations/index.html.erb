<p id="notice"><%= notice %></p>

<h1>My destination wish list</h1>

<ul class="nav nav-pills" role="tablist">
<li><%= link_to "All", destinations_path %></li>
  <% @my_countries.each do |c| %>
    <li><%= link_to c.country, destinations_path(country: c.country) %></li>
  <% end %>
</ul>
<%= link_to 'New Destination', new_destination_path, class: "btn btn-info" %>

<div class="row">
  <% @destinations.each do |destination| %>
    <div class="col-md-4">
      <div class="well">
        <p><%= "#{destination.city}, #{destination.country}, #{destination.population}" %></p>
        <p><%= destination.description %></p>
        <p>
          <%= link_to 'Show', destination, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-warning" %>
          <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </p>
      </div>
    </div>
  <% end %>
</div>